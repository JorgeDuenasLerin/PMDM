<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisPrimerosPasosXML">

    <Button
        android:id="@+id/miboton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi super botón!!!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/milabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa el botón"
        app:layout_constraintEnd_toEndOf="@+id/miboton"
        app:layout_constraintTop_toBottomOf="@+id/miboton" />
</androidx.constraintlayout.widget.ConstraintLayout>